<!DOCTYPE html>
<html lang="en">
<head>
	<title>Herbei | All Orders</title>	
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie-edge">
	<meta name="keywords" content="">
	<meta name="description" content="">
	<link rel="stylesheet" href="/css/bootstrap4.css">
	<link rel="stylesheet" href="/css/orders.css">
<!--	<link rel="stylesheet" href="/css/cart.css">	-->

</head>
<body>
	<nav class="nav">
	<div>
		<li><a href="/"><img class="image" src="/images/icons/icon-512x512.png" /></a></li>
	</div>
        <div>
			<% if(!user){ %>
				<div class="hover_">
					<li class="action-gray"><a href="/users/login">Login</a></li>
					<li class="action-red"><a href="/users/register">Register</a></li>
				</div>				 
			<%} else if(user.type === "Admin"){%>
				<div class="nav_">
					<div class="hover_ nav_one">
						<li><a href="#"><%=user.userName %></a></li>
						<li><a href="/clothes">Clothes</a></li>			</div>
					<div class="hover_ nav_two">
						<li><a href="/clothes/add">Add Clothes</a></li>		
						<li> <a href="/users/logout">Logout</a></li>
					</div>	
				</div>            
			<% } %>					
		</div>
	</nav>

	<main>
		<section id="all-clothes">
			<div class="container">
				<div id="order-container" class="p2">
					<% orders.forEach(function(order){ %>
						<div class="order">
							<p>
								<%= order.date.toDateString() %>
							</p>
							<button class="category"><a href="/orders/allOrders/<%=order._id%>">View Order</a></button>
						</div>					
					<% }) %>				
				</div>					
			</div>
		</section>
	</main>	
	<footer id="footer">
		<div class="container">
			<p>Copyright &copy; 2019, Herbei_Fashion, All Rights Reserved</p>
		</div>
	</footer>
</body>
</html>